#include<iostream>
using namespace std;
int main()
{
       int n;
       cin>>n;
       int a[n];
       
       for(int i=0;i<n;i++)
       {
               cin>>a[i];
       }
        
        int min=a[0];
        int count1=0;
        for(int i=0;i<n;i++)
        {
                if(min<a[i])
            { count1++;
                min=a[i];
            }
        }
      
       
       int max=a[0];
        int count2=0;
        for(int i=0;i<n;i++)
        {
                if(max>a[i])
            { count2++;
                max=a[i];
            }
        }
       
       
       
       cout<<count1<<" "<<count2;
       
       
       
       
        
        return 0;
}
