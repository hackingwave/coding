#include<iostream>
using namespace std;
int main ()
{
    int x1,x2,v1,v2;
    cin>>x1;
    cin>>v1;
    cin>>x2;
    cin>>v2;
   
      int p,q;  
      int count=0;  
        for(int i=0; i<10000;i++ )
        {
            p=x1+v1*i;
            q=x2+v2*i;
            if(p==q)
            {
                    count++;
            }
            
        }
        
        if(count>0)
        {
                cout<<"YES";
        }
       else
       {
               cout<<"NO";
       }
        
  return 0;      
        
}
