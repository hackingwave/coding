#include<iostream>
using namespace std;
int main(){
        int n,k;
        cin>>n;
        cin>>k;
        int count =0;
        int a[n];
        for(int i=0; i<n;i++)
        {
                cin>>a[i];
        }
        
        for(int i=0; i<n;i++)
        {
                for(int j=i; j<(n-1);j++)
                {
                        if((a[i]+a[j+1])%k==0)
                        count++;
                }
                
                
                
        }
        
        cout<<count;
        
        
        
        return 0;
}
