#include<iostream>
#include<string>
using namespace std;
int main()
{
    int q;
    cin>>q;
    string s;
    for(int i=0;i<q;i++)
    {
            cin>>s;
            
    
    
    int count =0;
    for(int i=0;i<s.size();i++)
    {
        if(s[i]==s[i+1])
        count++;
            
    }
    
    cout<<count<<endl;
    
    }
    
        return 0;
}
